            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record model="ir.rule" id="device_environment_rule">
            <field name="name">Device environment rule</field>
            <field name="model_id" ref="model_device_manager_device_environment"/>
